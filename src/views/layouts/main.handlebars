<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lịch Cúp Điện Việt Nam</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- DaisyUI CDN (via Tailwind plugin, requires Tailwind) -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@3.9.4/dist/full.min.css" rel="stylesheet" type="text/css" />
    <!-- Google Fonts - Bai Jamjuree -->
    <link href="https://fonts.googleapis.com/css2?family=Bai+Jamjuree:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Lucide Icons CDN -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <!-- Custom CSS for Font Application -->
    <style>
        body {
            font-family: 'Bai Jamjuree', sans-serif;
        }
    </style>
</head>
<body class="bg-base-100 text-base-content">
    <nav class="navbar bg-base-300 shadow-lg">
        <div class="container mx-auto">
            <a class="navbar-brand flex items-center text-xl font-bold text-base-content" href="/">
                <i data-lucide="zap" class="mr-2 w-6 h-6"></i> Lịch Cúp Điện VN
            </a>
            <div class="flex-none lg:hidden">
                <label for="my-drawer-3" class="btn btn-square btn-ghost">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
                </label>
            </div>
            <div class="flex-none hidden lg:block">
                <ul class="menu menu-horizontal">
                    <li><a href="/" class="flex items-center text-base-content hover:text-primary"><i data-lucide="home" class="mr-1 w-4 h-4"></i> Trang chủ</a></li>
                    <li><a href="/search" class="flex items-center text-base-content hover:text-primary"><i data-lucide="search" class="mr-1 w-4 h-4"></i> Tìm kiếm</a></li>
                    <li><a href="/map" class="flex items-center text-base-content hover:text-primary"><i data-lucide="map" class="mr-1 w-4 h-4"></i> Bản đồ</a></li>
                </ul>
            </div>
            <div class="flex-none ml-auto">
                <button class="btn btn-square btn-ghost" id="theme-toggle">
                    <i data-lucide="moon" id="moon-icon" class="w-5 h-5"></i>
                    <i data-lucide="sun" id="sun-icon" class="w-5 h-5 hidden"></i>
                </button>
                <button class="btn btn-ghost ml-2" id="theme-switcher-btn">
                    <i data-lucide="palette" class="w-5 h-5"></i>
                </button>
            </div>
        </div>
    </nav>

    <!-- Inline Theme Selector Section -->
    <section class="bg-base-300 shadow-lg py-2 hidden" id="theme-section">
        <div class="container mx-auto">
            <h3 class="text-sm font-medium mb-2 text-base-content">Chọn Giao Diện</h3>
            <div class="flex flex-wrap gap-2 overflow-x-auto" id="theme-selector">
                <button class="btn btn-xs" data-theme="light">Light</button>
                <button class="btn btn-xs" data-theme="dark">Dark</button>
                <button class="btn btn-xs" data-theme="cupcake">Cupcake</button>
                <button class="btn btn-xs" data-theme="bumblebee">Bumblebee</button>
                <button class="btn btn-xs" data-theme="emerald">Emerald</button>
                <button class="btn btn-xs" data-theme="corporate">Corporate</button>
                <button class="btn btn-xs" data-theme="synthwave">Synthwave</button>
                <button class="btn btn-xs" data-theme="retro">Retro</button>
                <button class="btn btn-xs" data-theme="cyberpunk">Cyberpunk</button>
                <button class="btn btn-xs" data-theme="valentine">Valentine</button>
                <button class="btn btn-xs" data-theme="halloween">Halloween</button>
                <button class="btn btn-xs" data-theme="garden">Garden</button>
                <button class="btn btn-xs" data-theme="forest">Forest</button>
                <button class="btn btn-xs" data-theme="aqua">Aqua</button>
                <button class="btn btn-xs" data-theme="lofi">Lofi</button>
                <button class="btn btn-xs" data-theme="pastel">Pastel</button>
                <button class="btn btn-xs" data-theme="fantasy">Fantasy</button>
                <button class="btn btn-xs" data-theme="wireframe">Wireframe</button>
                <button class="btn btn-xs" data-theme="black">Black</button>
                <button class="btn btn-xs" data-theme="luxury">Luxury</button>
                <button class="btn btn-xs" data-theme="dracula">Dracula</button>
                <button class="btn btn-xs" data-theme="cmyk">CMYK</button>
                <button class="btn btn-xs" data-theme="autumn">Autumn</button>
                <button class="btn btn-xs" data-theme="business">Business</button>
                <button class="btn btn-xs" data-theme="acid">Acid</button>
                <button class="btn btn-xs" data-theme="lemonade">Lemonade</button>
                <button class="btn btn-xs" data-theme="night">Night</button>
                <button class="btn btn-xs" data-theme="coffee">Coffee</button>
                <button class="btn btn-xs" data-theme="winter">Winter</button>
                <button class="btn btn-xs" data-theme="dim">Dim</button>
                <button class="btn btn-xs" data-theme="nord">Nord</button>
                <button class="btn btn-xs" data-theme="sunset">Sunset</button>
            </div>
        </div>
    </section>

    <div class="drawer">
        <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col">
            <div class="container mx-auto p-4">
                {{{body}}}
            </div>
            <footer class="footer bg-base-300 text-base-content p-10 mt-auto">
                <div class="container mx-auto text-center">
                    <p>© 2025 Lịch Cúp Điện Việt Nam. All rights reserved.</p>
                </div>
            </footer>
        </div>
        <div class="drawer-side">
            <label for="my-drawer-3" class="drawer-overlay"></label>
            <ul class="menu p-4 w-80 bg-base-100">
                <li><a href="/" class="text-base-content hover:text-primary"><i data-lucide="home" class="mr-1"></i> Trang chủ</a></li>
                <li><a href="/search" class="text-base-content hover:text-primary"><i data-lucide="search" class="mr-1"></i> Tìm kiếm</a></li>
                <li><a href="/map" class="text-base-content hover:text-primary"><i data-lucide="map" class="mr-1"></i> Bản đồ</a></li>
            </ul>
        </div>
    </div>

    <!-- Initialize Lucide Icons -->
    <script>
        lucide.createIcons();
    </script>
    <!-- Theme Toggle and Switcher Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('theme-toggle');
            const moonIcon = document.getElementById('moon-icon');
            const sunIcon = document.getElementById('sun-icon');
            const themeSwitcherBtn = document.getElementById('theme-switcher-btn');
            const root = document.documentElement;

            // Check for saved theme or system preference
            const savedTheme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
            root.setAttribute('data-theme', savedTheme);
            if (savedTheme === 'dark') {
                moonIcon.classList.add('hidden');
                sunIcon.classList.remove('hidden');
            } else {
                moonIcon.classList.remove('hidden');
                sunIcon.classList.add('hidden');
            }

            // Light/Dark Mode Toggle
            themeToggle.addEventListener('click', function() {
                const currentTheme = root.getAttribute('data-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                root.setAttribute('data-theme', newTheme);
                localStorage.setItem('theme', newTheme);
                if (newTheme === 'dark') {
                    moonIcon.classList.add('hidden');
                    sunIcon.classList.remove('hidden');
                } else {
                    moonIcon.classList.remove('hidden');
                    sunIcon.classList.add('hidden');
                }
            });

            // Theme Switcher Inline Section
            document.querySelectorAll('#theme-selector button[data-theme]').forEach(item => {
                item.addEventListener('click', function() {
                    const selectedTheme = this.getAttribute('data-theme');
                    root.setAttribute('data-theme', selectedTheme);
                    localStorage.setItem('theme', selectedTheme);
                    // Update toggle icon based on selected theme brightness
                    if (['dark', 'dracula', 'night', 'coffee', 'forest', 'black', 'luxury', 'halloween', 'synthwave', 'cyberpunk', 'dim', 'sunset'].includes(selectedTheme)) {
                        moonIcon.classList.add('hidden');
                        sunIcon.classList.remove('hidden');
                    } else {
                        moonIcon.classList.remove('hidden');
                        sunIcon.classList.add('hidden');
                    }
                    // Hide the theme section after selection
                    document.getElementById('theme-section').classList.add('hidden');
                });
            });

            // Toggle Theme Section Visibility
            themeSwitcherBtn.addEventListener('click', function() {
                const themeSection = document.getElementById('theme-section');
                themeSection.classList.toggle('hidden');
            });
        });
    </script>
</body>
</html>
